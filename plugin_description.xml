<library path="lib/libhri_rviz">
  <class name="hri_rviz/Humans"
         type="rviz::HumansDisplay"
         base_class_type="rviz::Display">
    <description>
        An image diplayer to visualize the people detected
    </description>
    <message_type>sensor_msgs/Image</message_type>
    <message_type>sensor_msgs/CompressedImage</message_type>
    <message_type>theora_image_transport/Packet</message_type>
  </class>  
  <class name="hri_rviz/Skeletons 3D"
         type="rviz::HumansModelDisplay"
         base_class_type="rviz::Display">
    <description>
        A multi-people 3D skeleton visualizer
    </description>
    <message_type>hri_msgs/IdsList</message_type>
  </class>
  <class name="hri_rviz/TF (HRI)"
         type="rviz::HRITFDisplay"
         base_class_type="rviz::Display">
    <description>
        TF visualizer for human related frames
    </description>
  </class>
</library>

